<ifModule mod_rewrite.c>
    Options +FollowSymlinks
    RewriteEngine On
    #pour les alias
    RewriteBase /PHPJordan/2026/web2-shoes/
    #RewriteBase /PHPJordan/shoes/

    RewriteRule ^product-([0-9]+)$ index.php?action=product&id=$1 [L]
    RewriteRule ^products-page-([0-9]+)$ index.php?action=products&page=$1 [L]
    RewriteRule ^products/?$ index.php?action=products&page=1 [L]
    #RewriteRule ^([a-zA-Z0-9_-]+)$ index.php?action=$1 [L]
</ifModule>